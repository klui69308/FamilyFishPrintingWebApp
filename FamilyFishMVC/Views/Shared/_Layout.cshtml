<!DOCTYPE HTML>
<html>
<head>
    <title>Family Fish Printing</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body>

    <!-- Header -->
    <header id="header">
        <nav class="left">
            <a href="#menu"><span>Menu</span></a>
            <div class="logo">@Html.ActionLink(" ~ Family Fish Printing, Inc. ~", "Index", "Home", new { style = "text-decoration:none;" })</div>
        </nav>
        
        <nav class="right">
            @Html.Partial("_LoginPartial")
        </nav>
    </header>

    <!-- Menu -->
    <nav id="menu">
        <ul class="links">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Cool Shirts for Sales", "Index", "Products")</li>
            <li>@Html.ActionLink("Cart", "Index", "Orders")</li>
        </ul>
