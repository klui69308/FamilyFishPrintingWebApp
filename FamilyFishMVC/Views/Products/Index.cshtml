@model List<FamilyFishMVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<section class="wrapper">
    <div class="inner">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <a href="@Url.Action("Details", new { id = item.Id })">
                        <div>
                            <img src="@Url.Content(item.GetImagePath())" alt="" height='270' />
                        </div>
                        <div class="content">
                            <h3>
                                @item.Name | Detail
                            </h3>
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
</section>
